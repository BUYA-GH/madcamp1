<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MadinAndroid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/themes_800</item>
        <item name="colorPrimaryVariant">@color/themes_600</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/themes_200</item>
        <item name="colorSecondaryVariant">@color/themes_400</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Button.Safe" parent="ThemeOverlay.AppCompat">
        <item name="colorPrimary">@color/safe</item>
    </style>
    <style name="Button.Danger" parent="ThemeOverlay.AppCompat">
        <item name="colorPrimary">@color/danger</item>
    </style>
</resources>